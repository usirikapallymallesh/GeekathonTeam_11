{
    "name": "YouTube Bookmarks",                               
    "description": "This extension allows you to quickly create bookmarks for YouTube videos. It simplifies the process of adding bookmarks to your browser, making it more convenient to save and access your favorite videos.",          
    "permissions": ["storage", "tabs"],       
    "version": "0.0.1",               
    "host_permissions": ["https://*.youtube.com/*"],   
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "_comment": "braking the url and checking with youtube matches and storing the data in contentScript.js" ,
        "matches": ["https://*.youtube.com/*"],
        "js": ["contentScript.js"]

      }
    ],

    "icons":{
      "16":"./assets/timestamp.png",
      "32":"./assets/timestamp.png",
      "48":"./assets/timestamp.png"
    },

    "web_accessible_resources": [
      {
        "_comment": "adding web accessible resources" ,
        "resources": [
          "assets/bookmark.png",
          "assets/play.png",
          "assets/delete.png",
          "assets/save.png"
        ],
        "matches": ["https://*.youtube.com/*"]
      }
    ],
    
    "action": {
      "_comment": "adding the actions such a icon image and hover title on pop up where to navigate in web page." ,
      "default_icon": {
        "16": "assets/bookmarkSign.png",
        "24": "assets/bookmarkSign.png",
        "32": "assets/bookmarkSign.png",
        "128":"assets/bookmarkSign.png"
      },
      "default_title": "My YT Bookmarks",
      "default_popup": "popup.html",
      "default_title": "Click Me"  
    },
    "manifest_version": 3,
    "author": {
      "_comment": "adding the user data ." ,
      "email": "krishna@gmail.com"
    }
  }